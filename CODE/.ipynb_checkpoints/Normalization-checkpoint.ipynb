   "source": [
    "import pandas as pd\n",
    "\n",
    "def linear_scaling(Y):\n",
    "    cols = list(Y.columns)\n",
    "    Y_norm=pd.DataFrame()\n",
    "    for col in cols:\n",
    "        col_norm = col + '_norm'\n",
    "        Y_norm[col_norm] = (Y[col] - Y[col].min())/(Y[col].max()-Y[col].min())\n",
    "    return Y_norm"
   ]
  }
